<div class="main">
  
  <div class="side_nav">
    <p><a href="/classes/all">View All Classes</a></p>
    <p><a href="/bookings/all">View All Bookings</a></p>
    <p><a href="/classes/new">Add a New Class</a></p>
  </div>
  
  
  <div class="all_info">
    
    <h4><%=@gymclass.name%></h4>
    
    <p>Day: <%=@gymclass.day%></p>
    <p>Start Time: <%=@gymclass.start_time%></p>
    <p>Class Duration: <%=@gymclass.duration%></p>
    <p>Spaces Left: <%=@gymclass.space_left%></p>
    <p>Members Taking Class:</p>
    <% @gymclass.list_members.each do |member| %>
    <ul>
      <li><%=member.first_name%> <%=member.last_name%>  -  has taken class <%=member.times_class_taken(@gymclass)%> times</li>
    </ul>
    <% end %>
    <hr/>
    
    
    <p><a href="/bookings/new/<%=@gymclass.id%>">Book a Member Into Class</a></p>
    
    <p><a href="/classes/<%=@gymclass.id%>/update">Update Class Details</a></p>
    
    <form action="/classes/<%=@gymclass.id%>/delete" method="post">
      <button type="submit" name="Delete">Remove This Class</button>
    </form>
    
  </div>
  
</div>
